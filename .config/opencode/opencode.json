{
  "$schema": "https://opencode.ai/config.json",
  "theme": "tokyonight",
	"plugin": [
    "opencode-gemini-auth@latest",
	],
	"provider": {
    "google": {
      "models": {
        "gemini-3-pro-preview": {
          "options": {
            "thinkingConfig": {
              "thinkingLevel": "high",
              "includeThoughts": true
            }
          }
        },
				"gemini-3-flash-preview": {
          "options": {
            "thinkingConfig": {
              "thinkingLevel": "low",
              "includeThoughts": true
            }
          }
				}
      }
    }
  },
	"model": "google/gemini-3-pro-preview",
  "small_model": "google/gemini-3-flash-preview",
  "autoupdate": true,
}
